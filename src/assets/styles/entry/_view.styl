@require './_variable.styl';
@require '../style/_common.styl';

// for html
scroll-view()
    overflow-x: hidden;
    width: 100%; height: auto;

    #content
        overflow-x: hidden;

// for html
static-view()
    // height relay
    &, body, #app, #app > div, #content, #content > div
        height: 100%;

    overflow-x: hidden; overflow-y: hidden;
    width: 100%; height: 100%;

    #content
        overflow-x: hidden;

main-pane($max-width)
    width: 100%; max-width: $max-width;
    height: 100%;
    x-center();
