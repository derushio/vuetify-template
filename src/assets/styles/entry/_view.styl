@require './_variable.styl';
@require '../style/_common.styl';

// for html
scroll-view()
    width: 100vw; height: auto;
    overflow-y: auto;

    &, body, #app, .v-application--wrap, #content, .v-content__wrap
        overflow-x: hidden;

// for html
static-view()
    // height relay
    &, body, #app, .v-application--wrap, #content
        width: 100%; height: 100%;
        overflow-x: hidden; overflow-y: hidden;

    .v-content__wrap
        width: 100%;  height: calc(100vh - 54px);
        overflow-x: hidden; overflow-y: hidden;

main-pane($max-width = 100%)
    width: 100%; max-width: $max-width;
    height: 100%;
    x-center();
