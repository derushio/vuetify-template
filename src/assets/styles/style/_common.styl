@require './_variable.styl';

canvas, iframe
    display: block;

a
    &, &:link, &:visited, &:hover, &:active
        color: inherit;
        text-decoration: none;

pre
	white-space: pre-wrap;

.full-height
    height: 100%;
    min-height: 100%;
    max-height: 100%;

.full-width
    width: 100%;
    min-height: 100%;
    max-height: 100%;

x-center()
    margin-left: auto; margin-right: auto;

.indent
    margin-left: 2rem;

.relative
    position: relative;

.cursor-pointer
    cursor: pointer;

.hover-active
    &:hover
        position: relative;

        &::after
            content: '';
            display: block;
            position: absolute;
            width: 100%; height: 100%;
            top: 0; left: 0;
            background-color: rgba(0, 0, 0, 0.05)

.filepicker
    position: absolute;
    display: block;
    overflow: hidden;
    opacity: 0;
    top: 0; left: 0;
    width: 100%; height: 100%;
    z-index: 1;

    &:after
        content: '';
        position: absolute;
        display: block;
        cursor: pointer;
        top: 0; left: 0;
        width: 100%; height: 100%;

.v-card__text
    padding-top: 1rem !important;
