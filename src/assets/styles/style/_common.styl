@require './_variable.styl';

canvas, iframe
    display: block;

.full-height
    height: 100%;
.full-width
    width: 100%;
x-center()
    margin-left: auto; margin-right: auto;

.indent
    margin-left: 2rem;

.cursor-pointer
    cursor: pointer;

.hover-active
    &:hover
        position: relative;

        &::after
            content: '';
            display: block;
            position: absolute;
            width: 100%; height: 100%;
            top: 0; left: 0;
            background-color: rgba(0, 0, 0, 0.05)
